{
  "name": "scrum-update-tracker",
  "version": "0.1.0",
  "description": "Cross-platform periodic work updates with daily Azure OpenAI summary",
  "main": "src/main.js",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "electron .",
    "package": "electron-builder -mwl"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "electron-store": "^8.2.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.scrumupdater",
    "productName": "Scrum Update Tracker",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}

